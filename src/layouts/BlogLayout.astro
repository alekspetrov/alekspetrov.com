---
import BaseHead from "../components/BaseHead.astro";
import PageHeader from "../components/PageHeader.astro";
import Footer from "../components/ShellFooter.astro";
import Header from "../components/ShellHeader.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
  };
}

const {
  content: { title, description },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="blog-content layout-wrapper">
      <PageHeader title={title} description={description} />
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global lang="postcss">
  .blog-content {
    @apply space-y-8;
  }

  .blog-content > h2,
  .blog-content > h3 {
    @apply text-neutral-900 dark:text-neutral-200;
  }

  .blog-content > a {
    @apply text-neutral-900 dark:text-neutral-200;
  }

  .blog-content > img {
    @apply rounded-lg;
  }

  .blog-content > figure figcaption {
    @apply text-center text-sm mt-2 md:pt-0;
  }

  .blog-content > ul,
  .blog-content > ol {
    @apply pl-4;
  }

  .blog-content ul li {
    @apply mb-2 list-disc;
  }

  .blog-content ol li {
    @apply mb-2 list-decimal;
  }

  .blog-content > .wide {
    @apply md:max-w-full;
  }
</style>
