---
import BaseHead from "../components/server/BaseHead.astro";
import Footer from "../components/server/ShellFooter.astro";
import Header from "../components/server/ShellHeader.astro";
import PageHeader from "../components/server/PageHeader.astro";
import SubsForm from "../components/client/SubsForm.astro";
import Container from "../components/server/BaseContainer.astro";
import ReadMore from "../components/server/PageReamMore.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
  };
}

const {
  content: { title, description },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Container>
      <Header />
      <article class="blog-content">
        <PageHeader title={title} description={description} />
        <slot />
        <SubsForm />
        <!-- <ReadMore /> -->
      </article>
      <Footer />
    </Container>
  </body>
</html>

<style is:global lang="postcss">
  .blog-content {
    @apply space-y-8;
  }

  .blog-content > *:not(.wide),
  .blog-content > *:not(.callout) {
    /*correlated with .layout-wrapper*/
    @apply mx-auto max-w-default px-4 md:px-0;
  }

  .blog-content > .wide {
    /* Image takes all width and the image is huge. Remove padding only on large scerens*/
    @apply max-w-wide mx-auto px-2 xl:px-0;
  }

  /* TODO: Refacctor this to .contanier cclass for blocks and modificatiors to control their withds behaviour.*/

  .blog-content > .callout {
    @apply max-w-default md:max-w-callout px-6 py-6 rounded-md border border-light-outline dark:border-dark-outline bg-light-card dark:bg-dark-card;
    @apply mx-2 sm:mx-auto;
  }

  .blog-content > .card {
    @apply rounded-md  bg-light-outline py-4 px-6 md:py-6 dark:border-dark-outline dark:bg-dark-card;
  }

  .blog-content a {
    @apply text-light-title transition-all duration-200 ease-in-out hover:underline dark:text-dark-title;
  }

  .blog-content img {
    @apply rounded-lg;
  }

  .blog-content figure figcaption {
    @apply text-center text-sm mt-2 md:pt-0;
  }

  .blog-content ul > li {
    @apply mb-2 list-disc ml-5;
  }

  .blog-content ol > li {
    @apply mb-2 list-decimal ml-5 pl-4;
  }
</style>
