---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
  titleBold?: string;
  description?: string;
  openGraph?: {
    image: string;
    description: string;
  };
}

const { title, titleBold, description, openGraph } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={titleBold ? titleBold + " " + title : title}
      description={description}
      og_description={openGraph?.description || description}
      og_image={openGraph?.image}
    />
  </head>
  <body class="text-gray-100 text-body antialiased bg-black">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
