---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Body from "../components/Body.astro";

export interface Props {
  title: string;
  titleBold?: string;
  description: string;
  // openGraph: {
  //   image: string;
  //   description: string;
  // };
}

const { title, titleBold, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={titleBold ? titleBold + " " + title : title}
      description={description}
    />
  </head>

  <body class="bg-graphite-100 text-graphite-900 antialiased">
    <Header />
    <main class="max-w-[1440px] mx-auto grid grid-cols-4 gap-2 p-2">
      <slot />
    </main>
    <Footer />
  </body>
</html>
