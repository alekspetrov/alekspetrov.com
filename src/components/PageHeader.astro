---
export interface Props {
  title: string;
  text?: string;
  class?: string;
}

const { title, text, class: className } = Astro.props;
---

<div
  class={`${className} bg-graphite-800 text-center px-6 py-8 md:py-12 col-span-4 rounded-xl `}
>
  <h3 class="flex-1 text-2xl md:text-4xl font-medium">
    {title}
  </h3>
  <p class="text-sm md:text-lg text-graphite-400 font-medium">{text}</p>
</div>
