---
export interface Props {
  title: string;
  text?: string;
}

const { title, text } = Astro.props;
---

<div
  class="text-center px-6 py-8 md:py-12 col-span-4 bg-graphite-800 rounded-xl"
>
  <h3 class="flex-1 text-2xl md:text-4xl font-medium">
    {title}
  </h3>
  <p class="text-sm md:text-lg text-graphite-450">{text}</p>
</div>
