---
export interface Props {
  maxWidth: "wide" | "narrow" | "full";
}

const { maxWidth }: Props = Astro.props;

const maxWidthClass = {
  wide: "max-w-[1440px]",
  narrow: "max-w-[1280px]",
  full: "max-w-full",
}[maxWidth];
---

<body class="bg-graphite-900 text-graphite-100">
  <main class={`${maxWidthClass} mx-auto px-2 space-y-4 py-4`}>
    <slot />
  </main>
</body>
