---
export interface Props {
  maxWidth: "wide" | "narrow" | "full";
}

const { maxWidth }: Props = Astro.props;

const maxWidthClass = {
  wide: "max-w-[1440px]",
  narrow: "max-w-[1280px]",
  full: "max-w-full",
}[maxWidth];
---

<body
  class="relative bg-graphite-100 text-graphite-900 dark:bg-graphite-900 dark:text-graphite-100"
>
  <main class={`${maxWidthClass} mx-auto px-2`}>
    <slot />
  </main>
</body>
