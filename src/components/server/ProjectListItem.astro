---
const { item } = Astro.props;
const { title, og_description } = item.frontmatter;
---

<li
  class="md:-mx-6 bg-light-card dark:bg-dark-card border border-light-outline dark:border-dark-outline rounded-md"
>
  <a href={item.url} class="block px-6 py-4">
    <div class="space-y-2 items-center gap-6 space">
      <div class="flex-1">
        <h3 class="title">{title}</h3>
        {item.frontmatter.og_description && <div>{og_description}</div>}
      </div>
    </div>
  </a>
</li>
