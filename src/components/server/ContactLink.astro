---
import { EMAIL, TWITTER, LINKEDIN } from "../../config";
const { type, className } = Astro.props;
---

{
  type === "email" && (
    <a class={`link ${className}`} href={`mailto:${EMAIL}`}>
      <slot>Email</slot>
    </a>
  )
}
{
  type === "twitter" && (
    <a class={`link ${className}`} href={TWITTER}>
      <slot>Twitter</slot>
    </a>
  )
}
{
  type === "linkedin" && (
    <a class={`link ${className}`} href={LINKEDIN}>
      <slot>LinkedIn</slot>
    </a>
  )
}
