---
const { image, text, reposts, impressions } = Astro.props;

export interface Props {
  image?: string;
  text?: string;
  reposts?: number;
  impressions?: number;
}
---

<div
  class="px-4 py-4 lg:px-8 xl:px-12 lg:py-8 border-b border-dashed border-dark-outline"
>
  <a
    href="https://twitter.com/alekspetrov_"
    class="flex items-center gap-4 mb-4 links"
  >
    <img
      src="/images/author_picture.png"
      class="rounded-full w-10 h-10 object-cover object-top"
    />
    <div class="flex-1 text-base">
      <div class="font-semibold">Aleks Petrov</div>
      <div class="text-sm">@alekspetrov_</div>
    </div>
  </a>
  {text && <div class="text-dark-title text-base mb-4">{text}</div>}
  {image && <img src={image} class="rounded-xl mb-4" alt="twitter_image" />}
  <div class="text-sm text-dark-text-default text-opacity-50">
    {impressions} impressionsãƒ»{reposts} reposts
  </div>
</div>
