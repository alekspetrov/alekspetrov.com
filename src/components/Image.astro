---
export interface Props {
  imageUrl: string;
  imageAlt: string;
  link?: string;
  class?: string;
}

const { imageUrl, imageAlt, link, class: className }: Props = Astro.props;
---

<div class={`${className} lg:p-6 rounded-3xl block overflow-hidden`}>
  <img src={imageUrl} alt={imageAlt} class="block rounded-xl overflow-hidden" />
</div>
