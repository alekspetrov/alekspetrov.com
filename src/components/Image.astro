---
export interface Props {
  imageUrl: string;
  imageAlt: string;
  link?: string;
  class?: string;
  size?: "half" | "full";
  rounded?: boolean;
}

const {
  imageUrl,
  rounded = true,
  imageAlt,
  link,
  class: className,
  size,
}: Props = Astro.props;
---

<a
  href={link}
  class:list={[
    className,
    "p-2 lg:p-4 flex flex-col rounded-2xl overflow-hidden",
  ]}
>
  <img
    src={imageUrl}
    alt={imageAlt}
    class:list={[
      "block overflow-hidden border border-graphite-700",
      { "rounded-2xl": rounded },
    ]}
  />
</a>
