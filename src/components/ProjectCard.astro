---
const { item } = Astro.props;
const { title, og_description, project_status, previewImage } =
  item.frontmatter;
---

<li
  class="bg-light-card dark:bg-dark-card border border-light-outline dark:border-dark-outline rounded-md"
>
  <a href={item.url} class="block p-4">
    <div class="space-y-2 items-center gap-6 space">
      <div class="flex-1">
        <h3 class="text-light-title dark:text-dark-title">{title}</h3>
        {item.frontmatter.og_description && <div>{og_description}</div>}
      </div>
    </div>
  </a>
</li>
