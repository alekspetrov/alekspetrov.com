---
// TODO: Rework to stractural component Entity_List + Entity_List_Item that is Astro.property
import { dateToLocale } from "../utils/date";

const { posts } = Astro.props;
---

<ul>
  {
    posts.map((post) => (
      <li>
        <a
          href={post.url}
          class="link flex justify-between -mx-4 px-4 py-3 hover:bg-neutral-100 dark:hover:bg-neutral-900 rounded"
        >
          <h3 class="dark:text-neutral-200">
            {post.title || post.frontmatter?.title}
          </h3>
          {post.frontmatter?.pubDate ? (
            <time datetime={post.frontmatter?.pubDate}>
              {dateToLocale(post.frontmatter?.pubDate)}
            </time>
          ) : (
            "In Progress"
          )}
        </a>
      </li>
    ))
  }
</ul>
